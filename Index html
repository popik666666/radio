<body>
  <div class="icon" onclick="toggleLogin()">🔑</div>

  <div id="loginBox">
    <h3>🎧 Přihlášení posluchače</h3>
    <input type="password" id="listenerPass" placeholder="Zadej heslo"><br>
    <button onclick="checkListener()">Přihlásit</button>
    <p id="listenerMsg"></p>
    <hr>
    <h4>🔐 Admin přihlášení</h4>
    <input type="password" id="adminPass" placeholder="Admin kód"><br>
    <button onclick="checkAdmin()">Přihlásit jako admin</button>
    <p id="adminMsg"></p>
  </div>

  <div id="adminPanel">
    <h3>🔧 Změna hesla posluchače</h3>
    <input type="password" id="newPass" placeholder="Nové heslo"><br>
    <button onclick="changePass()">Změnit heslo</button>
    <p id="changeMsg"></p>
    <button onclick="logoutAdmin()">Odhlásit admina</button>
  </div>

  <div id="playerBox">
    <h2>🎶 Popik666 Rádio</h2>
    <script src="//myradiostream.com/embed/Popik666"></script>
    <br>
    <button onclick="logout()">Odhlásit posluchače</button>
  </div>

  <script>
    const defaultListenerPass = "321456";
    const adminCode = "p666pr";

    // Načti heslo z localStorage nebo použij výchozí
    let listenerPass = localStorage.getItem("listenerPass") || defaultListenerPass;

    function toggleLogin() {
      const box = document.getElementById("loginBox");
      box.style.display = box.style.display === "block" ? "none" : "block";
    }

    function checkListener() {
      const pass = document.getElementById("listenerPass").value.trim();
      const msg = document.getElementById("listenerMsg");
      if (pass === listenerPass) {
        msg.textContent = "✅ Přístup povolen.";
        document.getElementById("loginBox").style.display = "none";
        document.getElementById("playerBox").style.display = "block";
      } else {
        msg.textContent = "❌ Nesprávné heslo.";
      }
    }

    function checkAdmin() {
      const pass = document.getElementById("adminPass").value.trim();
      const msg = document.getElementById("adminMsg");
      if (pass === adminCode) {
        msg.textContent = "✅ Admin přihlášen.";
        document.getElementById("loginBox").style.display = "none";
        document.getElementById("adminPanel").style.display = "block";
      } else {
        msg.textContent = "❌ Nesprávný admin kód.";
      }
    }

    function changePass() {
      const newPass = document.getElementById("newPass").value.trim();
      const msg = document.getElementById("changeMsg");
      if (newPass.length < 4) {
        msg.textContent = "❌ Heslo musí mít alespoň 4 znaky.";
        return;
      }
      listenerPass = newPass;
      localStorage.setItem("listenerPass", listenerPass);
      msg.textContent = "✅ Heslo změněno.";
      document.getElementById("newPass").value = "";
    }

    function logout() {
      document.getElementById("playerBox").style.display = "none";
    }

    function logoutAdmin() {
      document.getElementById("adminPanel").style.display = "none";
    }
  </script>
</body>
</html>
