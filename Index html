  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>🎧 Popik666 Rádio</title>
  <style>
    body {
      background-color: #111;
      color: #fff;
      font-family: Arial, sans-serif;
      text-align: center;
      padding: 2em;
    }
    .icon {
      font-size: 32px;
      cursor: pointer;
      user-select: none;
      color: #ff4444;
      transition: 0.3s;
    }
    .icon:hover {
      transform: scale(1.2);
    }
    #loginBox, #adminPanel, #playerBox {
      display: none;
      background: #222;
      padding: 1em;
      border-radius: 10px;
      max-width: 320px;
      margin: 2em auto;
    }
    input, button {
      padding: 0.6em;
      margin: 0.5em;
      font-size: 1em;
      border-radius: 6px;
      border: none;
      outline: none;
    }
    button {
      background: #ff4444;
      color: #fff;
      cursor: pointer;
    }
    button:hover {
      background: #ff6666;
    }
  </style>
